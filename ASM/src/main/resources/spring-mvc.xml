<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                         http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--    只对controller注解进行扫描 -->
    <context:component-scan base-package="com.petrichor" >
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <!--    配置视图解析器InternalResourceViewResolver-->
    <bean id="internalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <!--    过滤静态资源css img js jsp等-->
    <mvc:resources mapping="/css/**" location="/static/css/**" />
    <mvc:resources mapping="/img/**" location="/static/img/**" />
    <mvc:resources mapping="/js/**" location="/static/js/**" />
    <mvc:resources mapping="/jsp/**" location="/WEB-INF/views/**" />

    <!--    开启SpringMVC注解的支持-->
    <mvc:annotation-driven />
    <!--    启动默认Servlet处理器-->
    <mvc:default-servlet-handler/>


    <!--    Date类型和String之间转换-->
    <mvc:annotation-driven conversion-service="conversionService" />

    <!--    自定义参数绑定-->
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <!--        转换器-->
        <property name="converters">
            <list>
                <!--                日期类型转换-->
                <bean class="com.petrichor.utils.DateConverter"></bean>
            </list>
        </property>
    </bean>
</beans>